<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Stories">

        <ScrollView
            android:id="@+id/storyScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/story_heading"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/image1" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="325dp"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/save1"
                    app:layout_constraintTop_toBottomOf="@+id/Heading"
                    app:srcCompat="@drawable/harrypot" />

                <TextView
                    android:id="@+id/name1"
                    style="@style/storydes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:text="@string/potter_des"
                    android:textColor="#03A9F4" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="405dp"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/name2"
                    app:layout_constraintTop_toBottomOf="@+id/save1"
                    app:srcCompat="@drawable/sheldon" />

                <TextView
                    android:id="@+id/name2"
                    style="@style/storydes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:text="@string/sheldon_des"
                    android:textColor="#03A9F4"
                    app:layout_constraintBottom_toTopOf="@+id/image3"
                    app:layout_constraintTop_toBottomOf="@+id/image2" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="214dp"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/name2"
                    app:layout_constraintTop_toBottomOf="@id/name3"
                    app:srcCompat="@drawable/chandler" />

                <TextView
                    android:id="@+id/name3"
                    style="@style/storydes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:text="@string/joey_des"
                    android:textColor="#03A9F4"
                    app:layout_constraintBottom_toTopOf="@+id/image4"
                    app:layout_constraintTop_toBottomOf="@+id/image3" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="219dp"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/name4"
                    app:layout_constraintTop_toBottomOf="@+id/name3"
                    app:srcCompat="@drawable/sherr" />

                <TextView
                    android:id="@+id/name4"
                    style="@style/storydes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:text="@string/sherlock_des"
                    android:textColor="#03A9F4"
                    app:layout_constraintBottom_toTopOf="@+id/image5"
                    app:layout_constraintTop_toBottomOf="@+id/image4" />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="wrap_content"
                    android:layout_height="215dp"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/name5"
                    app:layout_constraintTop_toBottomOf="@+id/name4"
                    app:srcCompat="@drawable/brooklyn" />

                <TextView
                    android:id="@+id/name5"
                    style="@style/storydes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:text="@string/boyle_des"
                    android:textColor="#03A9F4"
                    app:layout_constraintBottom_toTopOf="@+id/image6"
                    app:layout_constraintTop_toBottomOf="@+id/image5" />

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="wrap_content"
                    android:layout_height="232dp"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/name6"
                    app:layout_constraintTop_toBottomOf="@+id/name5"
                    app:srcCompat="@drawable/jakejudy" />

                <TextView
                    android:id="@+id/name6"
                    style="@style/storydes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:text="@string/judy_des"
                    android:textColor="#03A9F4"
                    app:layout_constraintTop_toBottomOf="@+id/image6" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>